<UserControl
    x:Class="Paint_Keyboard.Controls.ItemIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    d:DesignHeight="450" 
    d:DesignWidth="800"
    IsHitTestVisible="False"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Width="50" Height="50" BorderThickness="1" BorderBrush="#33000000">
            <TextBlock x:Name="GlyphTextBlock" FontSize="22" FontFamily="Segoe UI Symbol" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

        <TextBlock x:Name="CodeKeyTextBlock" Grid.Row="1" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>

</UserControl>